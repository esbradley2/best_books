<!-- Validation failure messages -->

<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Book #<%= @book.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag book_url(@book.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @book.title %>">
            </div>
          </div>

          <!-- Label and input for author -->
          <div class="form-group">
            <label for="author" class="col-sm-2 control-label">
              Author
            </label>
            <div class="col-sm-10">
              <input type="text" id="author" name="author" placeholder="Author" class="form-control" value="<%= @book.author %>">
            </div>
          </div>

          <!-- Label and input for num_pages -->
          <div class="form-group">
            <label for="num_pages" class="col-sm-2 control-label">
              Num pages
            </label>
            <div class="col-sm-10">
              <input type="text" id="num_pages" name="num_pages" placeholder="Num pages" class="form-control" value="<%= @book.num_pages %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Book" class="btn btn-warning">
              or
              <%= link_to "Cancel", book_url(@book.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
